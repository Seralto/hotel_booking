<div class="col-md-2"></div>
<div class="well col-lg-8 seach-box">
  <h1 class="text-center">Helcome to Conichi</h1>
  <h4 class="text-center">Please fill the location and maximum distance to see a list of hotels near you.</h4>
  <%= form_tag hotels_path, id: 'address-form', method: 'get' do %>
    <%= hidden_field_tag :lat %>
    <%= hidden_field_tag :lng %>
    <div class="row">
    <div class="form-group col-md-8 col-lg-8">
      <%= text_field_tag :address, nil, {class: 'form-control', placeholder: 'Enter the location...', autofocus: true} %>
    </div>
    <div class="form-group col-md-4 col-lg-4">
      <%= text_field_tag :distance, nil, {class: 'form-control', placeholder: 'Enter the distance in meters...'} %>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-12">
      <button class="btn btn-lg btn-primary col-lg-12" type="submit">Search Hotel</button>
    </div>
    </div>
  <% end %>
</div>
<div class="col-md-2"></div>
