<h3>Bookings List</h3>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th>Hotel</th>
        <th>City</th>
        <th>Checkin date</th>
        <th width="80">Options</th>
      </tr>
    </thead>

    <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.hotel %></td>
        <td><%= booking.city %></td>
        <td><%= booking.checkin.strftime('%b %d, %Y') %></td>
        <td><%= link_to 'Remove', booking_path(booking), method: :delete, data: { confirm: 'Are you sure you want to remove this book?'}, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

