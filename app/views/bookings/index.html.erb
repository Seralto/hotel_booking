<h3>Bookings List</h3>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th>Hotel</th>
        <th>City</th>
        <th>Checkin date</th>
      </tr>
    </thead>

    <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.hotel %></td>
        <td><%= booking.city %></td>
        <td><%= booking.checkin.strftime('%b %d, %Y') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

